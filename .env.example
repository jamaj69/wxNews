# .env.example - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# PostgreSQL Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=predator
DB_PASSWORD=your_secure_password_here
DB_NAME=predator3_dev

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# NewsAPI Configuration
# ============================================
# Get free API keys at: https://newsapi.org/register
# Separate multiple keys with commas (no spaces)
NEWS_API_KEY_1=your_api_key_1_here
NEWS_API_KEY_2=your_api_key_2_here
NEWS_API_KEY_3=your_api_key_3_here
NEWS_API_KEY_4=your_api_key_4_here

# Comma-separated language codes
LANGUAGES=en,pt,es,it

# Update interval in seconds (600 = 10 minutes)
UPDATE_INTERVAL_SEC=600

# ============================================
# SQLite Database Configuration
# ============================================
# Path to SQLite database file (relative or absolute)
DB_PATH=predator_news.db

# ============================================
# RSS Feed Configuration
# ============================================
# Timeout for fetching RSS feeds (seconds)
RSS_TIMEOUT=15

# Maximum concurrent RSS feed fetches
RSS_MAX_CONCURRENT=10

# Number of RSS sources to process in each batch
RSS_BATCH_SIZE=20

# ============================================
# MediaStack API Configuration
# ============================================
# Get free API key at: https://mediastack.com/signup/free
MEDIASTACK_API_KEY=your_mediastack_api_key_here
MEDIASTACK_BASE_URL=https://api.mediastack.com/v1/news

# ============================================
# Article Content Enrichment
# ============================================
# Automatically fetch missing content from article URLs
# When RSS feeds only provide title and link, this will attempt to
# extract author, description, and article text from the webpage
ENRICH_MISSING_CONTENT=true

# Timeout for content enrichment requests (seconds)
ENRICH_TIMEOUT=10

# ============================================
# Mastodon Configuration (Optional - Future)
# ============================================
MASTODON_INSTANCE=https://mastodon.social
MASTODON_ACCESS_TOKEN=

# ============================================
# Twitter/X Configuration (Currently Broken)
# ============================================
# Twitter API v1.1 is deprecated and requires paid tier
# These are kept for reference only - DO NOT USE
# TWITTER_CONSUMER_KEY=
# TWITTER_CONSUMER_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_TOKEN_SECRET=

# ============================================
# Application Configuration
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=pytweeter.log

# GUI settings
GUI_REFRESH_INTERVAL_MS=60000
GUI_THEME=light

# ============================================
# Monitoring & Observability (Optional)
# ============================================
# Sentry for error tracking
SENTRY_DSN=

# Prometheus metrics port
PROMETHEUS_PORT=9090

# ============================================
# Development Settings
# ============================================
# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug mode (verbose logging)
DEBUG=false
